
.title{
  text-align: center;
  margin-top: 20px;
  margin-bottom: -16px;
  font-size: 21px;
  font-weight: 600;
}

.activeTotal,.activeform,.msg,.pickall,.activeList{
  display: flex;
  justify-content: center;
}

.activeTotal{
  padding: 60rpx 0rpx;
  line-height: 2rem;
}
.activeform{
  flex-direction: column;
  text-align:left;
  width: 80%;
}

.msg{
  align-items: center;
  padding-top: 30rpx;
}
.msg text{
  border-color: rgb(90, 90, 90);
  padding-right: 45rpx;
}
.msg input{
  align-self: flex-end;
  font-size: 0.7rem;
  color: black;
  border-radius: 8rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
  padding-left: 25px;
  width:50%;
}

.pickall{
  flex-direction: column;
  padding-left: 50rpx;
  font-size: 16px;
}
.pick{
  position: relative;
  padding-left: 2%;
}
.pick_range{
  padding-left: 45rpx;
}

.activeList{
  flex-direction: column;
}
.active{
  display: flex;
  flex-direction: column;
  border: 1px solid gold;
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  line-height: 50rpx;
}
.active button{
  width: 80%;
  line-height: 2.5rem;
} 
.Amsg{
  display: flex;
  flex-direction: row;
  font-size: 15px;
  padding-bottom:5rpx;
  align-items: center;
}
.active label{
  text-align: center;
  width: 220rpx;
  padding-left: 15rpx;
}
.active text{
  text-align: left;
  width: 300rpx;
}

.tips{
  align-items: center;
  text-align: center;
  padding-top: 20rpx;
}

.plaseholder{
  font-size: 12px;
}

.textatea{
  height: 50px;
  padding: 0.5rem;
  border-radius: 0.5rem;
  box-shadow: 0 0 0.15rem #aaa;
  max-height: 50px;
  margin-top: 20px;
}

.submit{
  height:auto;
  width:80%;
  outline: none;
  padding:0;
  background-color:rgb(0,178,106);
  color: white;
  border: none;
  text-align: center;
  line-height:auto;
  margin-top:1.5rem;
  margin-bottom: 50px;
}

#disable{
  background-color: rgb(200, 200, 200);
}