/* pages/page_general/clock/clock.wxss */

.all,.camera{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.camera{
  justify-content: center;
  height: 300rpx;
  width: 100%;
}
.camera image{
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}
.camera text{
  font-size: 17px;
  letter-spacing: 5rpx;
  padding: 20rpx;
}

.msg{
  display: flex;
}
.label{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  line-height: 60rpx;
}
.msg text{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  line-height:60rpx;
}

.btn{
  height:auto;
  width:80%;
  outline: none;
  padding:0;
  background-color:rgb(0,178,106);
  color: white;
  border: none;
  text-align: center;
  line-height:auto;
  margin-top:1.5rem;
  margin-bottom: 50px;
}