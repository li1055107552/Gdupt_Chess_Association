<!--pages/page_admin/active/add/add.wxml-->

<view class="all">

  <form bindsubmit="check" class="form">
      <view class="name">
        <text>名 称</text>
        <input type="text" placeholder="请输入活动名称" name="activeName" class="name"></input>
      </view>

      <view class="code">
        <text>活 动 编 码</text>
        <input type="number" placeholder="请设置活动唯一编码" name="activeCode" class="code"></input>
      </view>  

      <view class="area">
        <text>活 动 地 点</text>
        <input type="text" placeholder="请输入本次活动举办地点" name="activeArea" class="area"></input>
      </view>

      <view class="raceStart">
        <text class="lable">比赛开始时间：</text>
        <picker mode="date" value="{{raceStartdate}}" bindchange="timeChange" name="raceStartdate" class="picker" id="raceStartdate">
          <view class="picker">
              {{raceStartdate}}
          </view>
        </picker>
        <text space="nbsp"> \t</text>
        <picker mode="time" value="{{raceStarttime}}" bindchange="timeChange" name="raceStarttime" id="raceStarttime">
          <view class="picker">
              {{raceStarttime}}
          </view>
        </picker>
      </view>

      <view class="raceEnd">
          <text class="lable">比赛结束时间：</text>
          <picker mode="date" value="{{raceEnddate}}" bindchange="timeChange" name="raceEnddate" class="picker" id="raceEnddate">
            <view class="picker">
                {{raceEnddate}}
            </view>
          </picker>
          <text space="nbsp"> \t</text>
          <picker mode="time" value="{{raceEndtime}}" bindchange="timeChange" name="raceEndtime" id="raceEndtime">
            <view class="picker">
                {{raceEndtime}}
            </view>
          </picker>
      </view>

      <view class="enterStart">
          <text class="lable">报名开始时间：</text>
          <picker mode="date" value="{{enterStartdate}}" bindchange="timeChange" name="enterStartdate" class="picker" id="enterStartdate">
            <view class="picker">
                {{enterStartdate}}
            </view>
          </picker>
          <text space="nbsp"> \t</text>
          <picker mode="time" value="{{enterStarttime}}" bindchange="timeChange" name="enterStarttime" id="enterStarttime">
            <view class="picker">
                {{enterStarttime}}
            </view>
          </picker>
      </view>

      <view class="enterEnd">
          <text class="lable">报名结束时间：</text>
          <picker mode="date" value="{{enterEnddate}}" bindchange="timeChange" name="enterEnddate" class="picker" id="enterEnddate">
            <view class="picker">
                {{enterEnddate}}
            </view>
          </picker>
          <text space="nbsp"> \t</text>
          <picker mode="time" value="{{enterEndtime}}" bindchange="timeChange" name="enterEndtime" id="enterEndtime">
            <view class="picker">
                {{enterEndtime}}
            </view>
          </picker>
      </view>

      <text class="lable1">当前状态：</text>
      <radio-group name="state" class="activeState">
          <radio value="未开始" checked="true" class="radio">未开始</radio>
          <radio value="正在进行" class="radio">正在进行</radio>
          <radio value="已结束" class="radio">已结束</radio>
      </radio-group>

      <text class="lable1">活动对象：</text>
      <radio-group name="who" class="who">
          <radio value="secretary" checked="true" class="radio">干事</radio>
          <radio value="vip" class="radio">会员</radio>
          <radio value="member" class="radio">全校师生</radio>
      </radio-group>
      
      <view class="enterstate">
          <text class="lable2">活动报名状态：</text>
          <text class="lable3">关闭</text>
          <switch name="enterstate" class="switch"></switch>
          <text class="lable3">开启</text>
      </view>

      <view class="clockstate">
          <text class="lable2">打卡签到状态：</text>
          <text class="lable3">关闭</text>
          <switch  name="clockstate" class="switch"></switch>
          <text class="lable3">开启</text>
      </view>

      <view class="memberIsCode">
          <text class="lable2">非会员打卡是否需要验证码：</text>
          <text class="lable3">否</text>
          <switch name="code_member" class="switch"></switch>
          <text class="lable3">是</text>
      </view>

      <view class="vipIsCode">
          <text class="lable2" space="ensp"> 会员打卡是否需要验证码： </text>
          <text class="lable3">否</text>
          <switch name="code_vip" class="switch"></switch>
          <text class="lable3">是</text>
      </view>

      <button form-type="submit">确 认 创 建</button>
  </form>

    <view class="zan-dialog {{ showDialog ? 'zan-dialog--show' : '' }}">
      
      <view class="zan-dialog__mask" bindtap="toggleDialog" />     <!--点击任意处隐藏-->
        <image bindtap="notice" class="icon" src="../../../index/icon1.png"></image>
        <view class="zan-dialog__container">
          <view class="tips">    
              <text space="emsp">{{text}}</text>
          </view>
        </view>
      </view>

</view>