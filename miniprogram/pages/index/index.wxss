/**index.wxss**/

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 150px;
}

.button{
  height:auto;
  width:80%;
  outline: none;
  padding:0;
  background-color:rgb(0,178,106);
  color: white;
  border: none;
  text-align: center;
  line-height:auto;
  margin-top: 1rem;
}

